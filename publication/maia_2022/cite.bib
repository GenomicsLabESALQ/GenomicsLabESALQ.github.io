	title = {A {Bacterial} {Type} {Three} {Secretion}-{Based} {Delivery} {System} for {Functional} {Characterization} of \textit{{Sporisorium} scitamineum} {Plant} {Immune} {Suppressing} {Effector} {Proteins}},
	volume = {112},
